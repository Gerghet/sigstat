<Window x:Class="SigStat.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ss="clr-namespace:SigStat.Common;assembly=SigStat.Common"
        xmlns:local="clr-namespace:SigStat.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Load database..." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <ListBox ItemsSource="{Binding Signers}" SelectedItem="{Binding SelectedSigner}" HorizontalAlignment="Left" Height="377" Margin="10,35,0,0" VerticalAlignment="Top" Width="176">

        </ListBox>
        <ListBox ItemsSource="{Binding SelectedSigner.Signatures}" SelectedItem="{Binding SelectedSignature}" HorizontalAlignment="Left" Height="377" Margin="186,35,0,0" VerticalAlignment="Top" Width="206"/>
        <local:SignatureVisualizer Background="LightSteelBlue" Signature="{Binding SelectedSignature}" HorizontalAlignment="Left" Height="200" Margin="397,35,-122,-328.5" VerticalAlignment="Top" Width="200">
        </local:SignatureVisualizer>

    </Grid>
</Window>
